<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ast_mob_sdk_register_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:alpha="0.9"
    android:background="#ECECEC"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="11dp" >

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="7dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="使用手机号登录"
            android:textColor="#000000"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/ast_back_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:text="使用手机注册安全性高且方便记忆"
        android:textColor="#676765"
        android:textSize="10dp" />

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp" >

        <EditText
            android:id="@+id/ast_mob_sdk_phone_et"
            style="@style/ast_mob_sdk_input_font"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ast_mob_sdk_input_background"
            android:hint="用于接收验证短信"
            android:paddingLeft="55dip"
            android:paddingRight="40dip"
            android:singleLine="true"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ast_mob_sdk_register_username_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:contentDescription="@string/ast_mob_sdk_login_page_img_tips"
            android:text="@string/phone_number_label"
            android:textColor="#797876" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_regist_login"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp" >

        <Button
            android:id="@+id/ast_mob_sdk_next_step_btn"
            style="@style/ast_mob_sdk_login_button_font"
            android:layout_width="fill_parent"
            android:layout_height="27dp"
            android:layout_marginTop="7dp"
            android:background="#7C0000"
            android:onClick="login"
            android:text="下一步" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp" >

        <TextView
            android:id="@+id/text1"
            style="@style/ast_mob_sdk_login_main_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/ast_mob_sdk_transparent"
            android:clickable="true"
            android:onClick="onClickRemeberPwd"
            android:text="你可以选择"
            android:textColor="#6F6F6F" />

        <TextView
            android:id="@+id/text2"
            style="@style/ast_mob_sdk_login_main_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/text1"
            android:background="@color/ast_mob_sdk_transparent"
            android:clickable="true"
            android:onClick="onClickRemeberPwd"
            android:text="普通账号注册" />
    </RelativeLayout>

</LinearLayout>