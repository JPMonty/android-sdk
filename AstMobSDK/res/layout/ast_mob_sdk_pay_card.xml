<?xml version="1.0" encoding="utf-8"?>
<!-- 充值卡布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/ast_mob_sdk_white"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <ImageView
        android:id="@+id/ast_mob_sdk_card_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="89dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/ast_mob_sdk_pay_mobile" />

    <TextView
        android:id="@+id/ast_mob_sdk_pay_user"
        style="@style/ast_mob_sdk_pay_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ast_mob_sdk_card_icon"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/ast_mob_sdk_pay_alipay_user" />

    <TextView
        android:id="@+id/ast_mob_sdk_pay_card_money"
        style="@style/ast_mob_sdk_pay_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ast_mob_sdk_pay_user"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="7dp"
        android:text="@string/ast_mob_sdk_pay_alipay_money" />

    <TextView
        android:id="@+id/ast_mob_sdk_pay_card_goods"
        style="@style/ast_mob_sdk_pay_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ast_mob_sdk_pay_card_money"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="7dp"
        android:text="@string/ast_mob_sdk_pay_alipay_goods" />

    <Spinner
        android:id="@+id/ast_mob_sdk_pay_spinner_field_item_content"
        style="@style/ast_mob_sdk_pay_spinner_style"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ast_mob_sdk_pay_card_goods"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="22dp"
        android:animationCache="true"
        android:drawSelectorOnTop="true" />

    <EditText
        android:id="@+id/ast_mob_sdk_card_number"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ast_mob_sdk_pay_spinner_field_item_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ast_mob_sdk_input_bg"
        android:hint="@string/ast_mob_sdk_pay_input_card_number"
        android:inputType="number"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/ast_mob_sdk_card_pwd"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ast_mob_sdk_card_number"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ast_mob_sdk_input_bg"
        android:hint="@string/ast_mob_sdk_pay_input_card_pwd"
        android:imeOptions="actionGo"
        android:inputType="textPassword"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="12sp" />

    <Button
        android:id="@+id/ast_mob_sdk_card_pay_ok"
        style="@style/ast_mob_sdk_pay_bt_red"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ast_mob_sdk_card_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/ast_mob_sdk_bt_red"
        android:text="@string/ast_mob_sdk_pay_confirm" />

</RelativeLayout>